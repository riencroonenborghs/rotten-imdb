{
  "manifest_version": 2,
  "name": "Rotten IMDB",
  "description": "Search highlighted text on Rotten Tomatoes or IMDB",
  "version": "2.0.0",
  "browser_action": {
    "default_icon": "assets/images/app.png"
  },
  "background": {
    "scripts": ["main.js"]
  },
  "permissions": [
    "contextMenus",
    "storage",
    "tabs",
    "https://www.rottentomatoes.com/*",
    "https://www.imdb.com/*"
  ],
  "icons": {
    "16": "assets/images/app.png"
  }
}